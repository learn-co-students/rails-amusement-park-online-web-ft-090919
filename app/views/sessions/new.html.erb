<h1>Sign In</h1>
<% if flash.try(:alert) %>

  <ul>
    <li><%= flash[:alert] %></li>
  </ul>

<% end %>

<%= form_tag('/sessions') do %>

  <div class="form-group">
    <%= label_tag :name %>
    <%= collection_select(:user, :name, User.all, :name, :name, prompt: "Please select user from the dropdown") %><br>
  </div>

  <div class="form-group">
    <%= label_tag :password, "Password: " %>
    <%= password_field_tag :password, nil, class: "form-control" %><br>
  </div>

  <div class="actions">
    <%= submit_tag 'Sign In' %>
  </div>
  
<% end %>
