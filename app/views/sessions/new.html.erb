<%= form_tag session_path %>

  <div class="form-group">
    <label for="name">Your name:</label>
    <%= collection_select(:user, :name, User.all, :name, :name, prompt: "Please select your username from this dropdown") %>
    <!-- <select name="user[name]" id="user_name"><option value="">Please select your username from this dropdown</option> -->

  </div>

  <div class="form-group">
    <label for="password">Your password:</label>
    <%= password_field_tag(:password, nil, class: "form-control") %>
  </div>

  <div class="actions">  
    <%= submit_tag "Sign In" %>
  </div>

</form>
