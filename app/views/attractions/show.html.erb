<h3>Name: <%= @attraction.name %></h3>
<% if current_user.try(:admin) %>
  <%= link_to 'Edit Attraction', edit_attraction_path(@attraction) %>
<br>
<% end %>
<% if current_user  %>
  <%= form_for(@ride) do |f| %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :attraction_id %>
    <%= f.submit 'Go on this ride' %>
  <% end %>
<% end %>